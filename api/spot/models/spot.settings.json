{
  "kind": "collectionType",
  "collectionName": "spots",
  "info": {
    "name": "Spot",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "latitude": {
      "type": "float"
    },
    "longitude": {
      "type": "float"
    },
    "description": {
      "type": "text"
    },
    "public": {
      "type": "boolean"
    },
    "pilot": {
      "model": "pilot"
    },
    "medias": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "enableLikes": {
      "type": "boolean"
    },
    "enableShares": {
      "type": "boolean"
    },
    "enableComments": {
      "type": "boolean"
    },
    "enableTags": {
      "type": "boolean"
    },
    "spot_type": {
      "model": "spot-type"
    },
    "privacy": {
      "type": "string",
      "default": "private"
    },
    "spot_accessibility": {
      "model": "spot-accessibility"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "showCreatorName": {
      "type": "boolean"
    }
  }
}
