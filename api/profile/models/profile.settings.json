    },
    "followers": {
      "collection": "profile"
    },
    "followees": {
      "collection": "profile"
    },
    "avatar": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
