{
  "kind": "collectionType",
  "collectionName": "profiles",
  "info": {
    "name": "Profile",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
